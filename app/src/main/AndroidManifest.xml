<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaede.bilibilikaede">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.HomeActivity" />
        <activity android:name=".UI.LoginActivity" />
        <activity android:name=".UI.FanJuActivity" />
        <activity android:name=".UI.PlayVideoActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".UI.PlayVideoFullScreen"
            android:screenOrientation="landscape" />
        <activity android:name=".UI.SearchActivity"></activity>
    </application>

</manifest>
